@model IEnumerable<CoffeeShop.DAL.Role>

@{
    ViewBag.Title = "Danh sách vai trò";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title">Danh sách vai trò</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8">
            <p>
                @Html.ActionLink(
                    "Thêm mới",
                    "Create",
                    null,
                    new { @class = "btn btn-success btn-sm" })
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8">
            @Html.ValidationSummary(true)
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8">
            <table class="table table-hover table-bordered">
                <tr class="alert-success">
                    <th class="text-nowrap text-center">STT</th>
                    <th class="text-nowrap">
                        Tên
                    </th>
                    <th class="text-nowrap">
                        Mô tả vai trò
                    </th>
                    <th class="text-nowrap">Thao tác</th>
                </tr>
                @{
                    var count = 0;

                    foreach (var item in Model)
                    {
                        count++;

                        <tr>
                            <td class="text-center text-nowrap">@count</td>
                            <td class="text-nowrap">
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-nowrap text-center">
                                @Html.ActionLink(
                                    "Sửa",
                                    "Edit",
                                    new { id = item.RoleId },
                                    new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink(
                                    "Xóa",
                                    "Delete",
                                    new { id = item.RoleId },
                                    new
                                    {
                                        @class = "btn btn-danger btn-sm",
                                        @onclick = "return confirm('Bạn muốn xóa user\"" + item.RoleName + "\" không?');"
                                    })
                            </td>
                        </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(new function () {
            $("#menu-system").attr("class", "active");
        });
    </script>
}