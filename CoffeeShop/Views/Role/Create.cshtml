@model CoffeeShop.Models.RoleViewModel

@{
    ViewBag.Title = "Tạo vai trò";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title">@ViewBag.Title</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nhập thông tin vai trò cần tạo mới
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.ValidationSummary(true)
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-nowrap">Tên vai trò</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control", @placeholder = "Tên vai trò", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.RoleName, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-nowrap">Diễn giải</label>
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Mô tả vai trò", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Description, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-nowrap"></label>
                                    <div class="col-sm-9">
                                        <input type="submit" value="Tạo vai trò" class="btn btn-success" />
                                        <input type="reset" value="Nhập lại" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            @Html.ActionLink("Trở về danh mục", "Index")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(new function () {
            $("#menu-system").attr("class", "active");
        });
    </script>
}