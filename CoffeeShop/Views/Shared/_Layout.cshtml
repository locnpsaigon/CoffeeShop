<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    @Styles.Render("~/content/bootstrap")
    @Styles.Render("~/content/site")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!----start-header----->
    <div class="header_img">
        <img src="~/Content/images/header_img.jpg" alt="" />
        <div class="wrap">
            <div class="header">
                <div class="logo">
                    <a href="/Home/"><img src="~/Content/images/milano.png" alt=""></a>
                </div>
                <div class="menu">
                    <nav class="clearfix">
                        <ul class="clearfix">
                            <li><a href="/Home/">HOME</a></li>
                            <li><a href="/Home/About">ABOUT</a></li>
                            <li><a href="/Home/Service">SERVICES</a></li>
                            <li><a href="/Home/Price">PRICE LIST</a></li>
                            <li><a href="/Home/Contact">CONTACT</a></li>
                        </ul>
                        <a href="#" id="pull">Menu</a>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!----End-header----->
    
    <!---start-content---->
    @RenderBody()
    <!---End-content---->

    <!---start-footer---->
    <div class="copy-right">
        <p>(C) 2015 Milano Coffee</p>
        <p>ĐC: 11 Nguyễn Sơn Hà, Phường 5, Quận 3, TP.HCM</p>
        <p>ĐT: 0914380238</p>
        <p><a href="/Finance/">Administration</a></p>
    </div>
    <!---End-footer---->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)

<script type="text/javascript">
    $(window).load(function () {
        $('#slider').nivoSlider();
    });
</script>
</body>
</html>
