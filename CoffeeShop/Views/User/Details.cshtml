@model CoffeeShop.Models.UserProfileViewModel

@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title">@ViewBag.Title</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nhập thông tin tài khoản cần tạo mới
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Details", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group">
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(m => m.UserId)
                                    @Html.HiddenFor(m => m.Username)
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Mật khẩu hiện tại</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.CurrentPassword, new { @class = "form-control", @placeholder = "Mật khẩu hiện tại", @type = "password" })
                                        @Html.ValidationMessageFor(m => m.CurrentPassword, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Mật khẩu mới</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu mới", @type = "password" })
                                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Xác nhận mật khẩu mới</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Mật khẩu hiện tại", @type = "password" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Họ tên</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Email</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"> </label>
                                    <div class="col-sm-8">
                                        <input type="submit" value="Đổi mật khẩu" class="btn btn-success btn-sm" style="width:120px;" />
                                        <input type="reset" value="Nhập lại" class="btn btn-success btn-sm" style="width:120px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(new function () {
            $("#menu-account").attr("class", "active");
        });
    </script>
}

