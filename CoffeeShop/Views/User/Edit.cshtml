@model CoffeeShop.Models.UserViewModel

@{
    ViewBag.Title = "Cập nhật tài khoản";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title">@ViewBag.Title</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nhập thông tin tài khoản cần tạo mới
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.UserId)
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Tên đăng nhập</label>
                                    <div class="col-sm-8">
                                        @Html.HiddenFor(m => m.Username)
                                        @Html.TextBoxFor(m => m.Username,
                                            new
                                            {
                                                @class = "form-control",
                                                @placeholder = "Tên đăng nhập",
                                                @type = "text",
                                                @disabled = "disabled"
                                            })
                                        @Html.ValidationMessageFor(m => m.Username, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Mật khẩu</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })
                                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Xác nhận mật khẩu</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu", @type = "password" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Họ</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Họ", @type = "text" })
                                        @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Tên</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Tên", @type = "text" })
                                        @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Email</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @type = "Email" })
                                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"> </label>
                                    <div class="col-sm-8">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @value = "true" })
                                        Kích hoạt tài khoản?
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="col-sm-12"><strong>Danh sách vai trò</strong></div>
                                @for (int i = 0; i < Model.RoleSelectViewModels.Count; i++)
                                {
                                <div class="col-sm-12 checkbox">
                                    <label>
                                        @Html.HiddenFor(m => m.RoleSelectViewModels[i].RoleId)
                                        @Html.HiddenFor(m => m.RoleSelectViewModels[i].RoleName)
                                        @Html.CheckBoxFor(m => m.RoleSelectViewModels[i].IsSeleced)
                                        @Model.RoleSelectViewModels[i].RoleName
                                    </label>
                                </div>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"> </label>
                                    <div class="col-sm-8">
                                        <!-- Change this to a button or input when using this as a form -->
                                        <input type="submit" value="Lưu tài khoản" class="btn btn-success btn-sm" />
                                        <input type="reset" value="Nhập lại" class="btn btn-success btn-sm" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    @Html.ActionLink("Trở về danh mục", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(new function () {
            $("#menu-system").attr("class", "active");
        });
    </script>
}


