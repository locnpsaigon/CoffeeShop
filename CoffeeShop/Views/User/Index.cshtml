@model IEnumerable<CoffeeShop.DAL.User>

@{
    ViewBag.Title = "Danh sách tài khoản";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title">Danh sách vai trò</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p>
                @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success btn-sm", @role = "button" })
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover table-bordered">
                <tr class="alert-success">
                    <th class="text-center">STT</th>
                    <th class="text-nowrap">
                        Tài khoản
                    </th>
                    <th class="text-nowrap">
                        Họ tên
                    </th>
                    <th class="text-nowrap">
                        Email
                    </th>
                    <th class="text-nowrap">
                        Kích hoạt
                    </th>
                    <th class="text-nowrap">
                        Ngày tạo
                    </th>
                    <th></th>
                </tr>

                @{
                    var count = 0;

                    foreach (var item in Model)
                    {
                        count++;

                        <tr>
                            <td class="center-text">@count</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @item.CreateDate.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td class="text-nowrap text-center">
                                @Html.ActionLink(
                                    "Sửa",
                                    "Edit",
                                    new { id = item.UserId },
                                    new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink(
                                    "Xóa",
                                    "Delete",
                                    new { id = item.UserId },
                                    new { @class = "btn btn-danger btn-sm", @onclick = "return confirm('Bạn muốn xóa user\"" + item.Username + "\" ');" })
                            </td>

                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>

@section Scripts {    
    <script>
        $(document).ready(new function () {
            $("#menu-system").attr("class", "active");
        });
    </script>
}


